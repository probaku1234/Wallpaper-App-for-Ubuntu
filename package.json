{
  "name": "wallpapr-app-for-ubuntu",
  "version": "1.0.0",
  "description": "Wallpaper Desktop Application for Ubuntu",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "electron-builder --linux --ia32",
    "build:linux64": "electron-builder --linux --x64"
  },
  "build": {
    "productName": "Wallpaper App",
    "appId": "com.electron.wallpaper",
    "asar": true,
    "protocols" : {
      "name" : "wallpaperApp",
      "schemes" : ["wallpaperapp"]
    },
    "linux": {
      "target": [
        "AppImage", 
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick" : false,
      "allowToChangeInstallationDirectory" :true
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/", 
      "app": "."
    }
  },
  "repository": "https://github.com/probaku1234/Wallpaper-App-for-Ubuntu",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "probaku1234 <fhzotxldj@gmail.com>",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^15.5.5",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "is-image": "^3.0.0",
    "jquery": "^3.5.0"
  }
}
